<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LayoutFullWidth">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LayoutFullParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="LayoutFullParent.Vertical.CenterGravity">
        <item name="android:gravity">center</item>
    </style>

    <style name="LayoutFullWidth.Vertical">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LayoutFullParent.Vertical">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LayoutFullWidth.Horizontal">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="LayoutFullWidth.MarginNormal">
        <item name="android:layout_margin">@dimen/indent_normal</item>
    </style>

    <style name="LayoutFullWidth.Vertical.MarginNormal">
        <item name="android:layout_margin">@dimen/indent_normal</item>
    </style>

    <style name="PostHeaderView" parent="LayoutFullWidth.Horizontal">
        <item name="android:paddingTop">@dimen/indent_half</item>
        <item name="android:paddingBottom">@dimen/indent_half</item>
    </style>

    <style name="AvatarView">
        <item name="android:layout_width">@dimen/avatar_size</item>
        <item name="android:layout_height">@dimen/avatar_size</item>
        <item name="android:paddingStart">@dimen/indent_half</item>
        <item name="android:paddingEnd">@dimen/indent_half</item>
    </style>

    <style name="PhotoView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/photo_height</item>
        <item name="android:background">#FF7f7679</item>
    </style>

    <style name="DefaultTextView" parent="LayoutFullWidth">
        <item name="android:gravity">center</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_margin">@dimen/indent_normal</item>
    </style>

    <style name="ErrorWrapper" parent="LayoutFullWidth.Vertical">
        <item name="android:layout_gravity">center</item>
        <item name="android:visibility">visible</item>
    </style>

</resources>
